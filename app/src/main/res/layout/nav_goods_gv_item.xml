<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="190dp" android:layout_height="90dp"
    android:background="@drawable/nav_goods_gv_item_bg_selector"
    >
    <TextView
        android:id="@+id/nav_goods_gv_item_road_num"
        android:layout_width="27dp"
        android:layout_height="17dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/nav_goods_gv_item_index_normal"
        android:text=""
        android:gravity="center"
        android:textColor="@color/colorGaryFiveTwo"
        android:textSize="12sp"
        />
    <ImageView
        android:id="@+id/nav_goods_gv_item_img"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:maxHeight="60dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/nav_goods_gv_item_road_num"
        android:layout_marginRight="2dp"
        android:scaleType="center"
        />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前数："
        android:layout_toRightOf="@+id/nav_goods_gv_item_img"
        android:layout_marginTop="22dp"
        android:textSize="16sp"
        android:textColor="@color/colorGaryFiveTwo"
        />
    <TextView
        android:id="@+id/nav_goods_gv_item_now_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--"
        android:layout_toRightOf="@+id/textView10"
        android:layout_alignTop="@+id/textView10"
        android:textSize="16sp"
        android:textColor="@color/colorDemoLogo"
        />
    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最大数："
        android:layout_toRightOf="@+id/nav_goods_gv_item_img"
        android:layout_below="@+id/textView10"
        android:textSize="12sp"
        android:textColor="@color/colorEightC"
        />

    <TextView
        android:id="@+id/nav_goods_gv_item_max_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--"
        android:layout_toRightOf="@+id/textView11"
        android:layout_below="@+id/textView10"
        android:textSize="12sp"
        android:textColor="@color/colorEightC"
        />

    <TextView
        android:id="@+id/nav_goods_gv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="5dp"
        android:layout_below="@+id/nav_goods_gv_item_img"
        android:textSize="12sp"
        android:textColor="@color/colorEightC"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        />

</RelativeLayout>