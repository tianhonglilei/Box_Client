<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhang.box.client.view.activity.ActiveActivity">



    <com.zhang.box.loading.ZLoadingView
        android:id="@+id/active_bg_loading"
        android:layout_width="450dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:scaleType="centerInside"
        app:z_color="@color/colorWhiteTxt" />

    <TextView
        android:id="@+id/active_bg_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/active_bg_loading"
        android:text="点创科技"
        android:textSize="34sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorWhiteTxt"
        />


    <RelativeLayout
        android:visibility="invisible"
        android:layout_width="440dp"
        android:layout_height="300dp"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorHomeGoodsBg"
        android:id="@+id/active_rl">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="点创科技DC-BOX"
            android:textSize="32sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorDemoLogo"
            />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="110dp"
            android:layout_height="103dp"
            android:src="@drawable/manager_login_logo_org"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="激活码"
            android:textColor="@color/colorGaryFiveTwo"
            android:layout_below="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            />
        <EditText
            android:id="@+id/edit_active_code"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="5dp"
            android:maxLength="14"
            android:inputType="number"
            android:text=""
            android:gravity="center"
            android:hint="请输入激活码"
            android:textSize="18sp"
            android:background="@drawable/manager_login_pwd_selector"
            />
        <Button
            android:id="@+id/active_btn"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_below="@+id/edit_active_code"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/manager_login_btn_selector"
            android:textSize="22dp"
            android:textColor="@color/colorWhiteTxt"
            android:text="激 活" />

    </RelativeLayout>

    <TextView
        android:id="@+id/active_download_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/active_rl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="" />



</RelativeLayout>
