<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="box.lilei.box_client.com.lilei.box_client.manager.view.activity.LoginActivity"
    android:background="@color/colorWhiteTxt">



    <RelativeLayout
        android:layout_width="440dp"
        android:layout_height="340dp"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorHomeGoodsBg"
        android:id="@+id/relativeLayout3">
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="110dp"
            android:layout_height="103dp"
            android:src="@drawable/manager_login_logo_org"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            />
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="管理员登陆"
            android:textColor="@color/colorGaryFiveTwo"
            android:layout_below="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            />
        <EditText
            android:id="@+id/login_edit_pwd"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="14dp"
            android:maxLength="8"
            android:inputType="numberPassword"
            android:text=""
            android:gravity="center"
            android:hint="请输入管理员密码"
            android:textSize="14sp"
            android:background="@drawable/manager_login_pwd_selector"
            />
        <Button
            android:id="@+id/login_btn"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:layout_below="@+id/login_edit_pwd"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/manager_login_btn_selector"
            android:textSize="22dp"
            android:textColor="@color/colorWhiteTxt"
            android:text="登 陆" />

        <Button
            android:id="@+id/login_cancel"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_below="@+id/login_edit_pwd"
            android:layout_toRightOf="@+id/login_btn"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/manager_login_btn_selector"
            android:textSize="22dp"
            android:textColor="@color/colorWhiteTxt"
            android:text="取消" />


    </RelativeLayout>




</RelativeLayout>
