<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="box.lilei.box_client.manager.view.activity.LoginActivity"
    android:background="@color/colorWhiteTxt">

    <include
        layout="@layout/manager_head"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        />

    <RelativeLayout
        android:layout_width="440dp"
        android:layout_height="340dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorHomeGoodsBg"
        android:id="@+id/relativeLayout3">
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="110dp"
            android:layout_height="103dp"
            android:src="@drawable/manager_login_logo_org"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            />
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="管理员登陆"
            android:textColor="@color/colorGaryFiveTwo"
            android:layout_below="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            />
        <EditText
            android:id="@+id/ed_manager_pwd"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="14dp"
            android:maxLength="8"
            android:inputType="textPassword"
            android:text=""
            android:gravity="center"
            android:hint="请输入管理员密码"
            android:textSize="14sp"
            android:background="@drawable/manager_login_pwd_selector"
            />
        <Button
            android:id="@+id/button"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:layout_below="@+id/ed_manager_pwd"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/manager_login_btn_selector"
            android:textSize="22dp"
            android:textColor="@color/colorWhiteTxt"
            android:text="登 陆" />

    </RelativeLayout>




</RelativeLayout>
