<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@android:color/transparent">


    <ImageView
        android:id="@+id/date_img_signal"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/signal_logo" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/date_img_signal"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:text="机器号:"
        android:textColor="@color/colorMoreTxtTwoOne"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/more_imei_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView6"
        android:layout_toEndOf="@+id/textView6"
        android:text="00000000"
        android:textColor="@color/colorMoreTxtTwoOne"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/date_img_signal"
        android:layout_below="@+id/date_img_signal"
        android:layout_marginTop="6dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/dc_logo" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="216dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true">


        <TextView
            android:id="@+id/more_weather_time"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="09:15"
            android:textColor="@color/colorDemoLogo"
            android:textSize="44sp" />

        <TextView
            android:id="@+id/more_weather_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/more_weather_time"
            android:layout_below="@+id/more_weather_time"
            android:layout_marginTop="6dp"
            android:text="10月16日 星期一"
            android:textColor="@color/colorGaryFiveTwo"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/more_line"
            android:layout_width="1dp"
            android:layout_height="52dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/more_weather_time"
            android:background="#e0dede"
            android:text="" />

        <TextView
            android:id="@+id/more_weather_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginTop="14dp"
            android:layout_toLeftOf="@+id/more_line"
            android:text="晴"
            android:textColor="@color/colorGaryFiveTwo"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/more_weather_wd_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/more_weather_txt"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/more_line"
            android:text="28℃"
            android:textColor="@color/colorGaryFiveTwo"
            android:textSize="28sp" />
    </RelativeLayout>


</RelativeLayout>