<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="@color/colorDemoLogo"
    >


    <ImageView
        android:id="@+id/manager_head_img_sign"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:src="@drawable/sign_four"
        android:visibility="visible"/>



    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="机器号："
        android:textColor="@color/colorWhiteTxt"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/manager_head_img_sign"
        android:layout_marginLeft="25dp"
        />

    <TextView
        android:id="@+id/manager_head_txt_imei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00000000"
        android:textColor="@color/colorWhiteTxt"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/textView1"
        />

    <TextView
        android:id="@+id/manager_head_txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="后台管理"
        android:textColor="@color/colorWhiteTxt"
        android:layout_centerInParent="true"
        />

    <TextClock
        android:id="@+id/textClock2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:textColor="@color/colorWhiteTxt"
        android:format24Hour="yyyy-MM-dd EE kk:mm"
        android:format12Hour="yyyy-MM-dd EE hh:mm"
        android:timeZone="GMT+0800"
        />

</RelativeLayout>