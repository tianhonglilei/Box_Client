<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    >


    <RelativeLayout
        android:layout_width="500dp"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/pay_dialog_bg"
        android:id="@+id/relativeLayout4">

        <TextView
            android:id="@+id/pay_dialog_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/dialog_txt_title_fail"
            android:textColor="@color/colorMoreTxtTwoOne"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/pay_dialog_txt_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pay_dialog_txt_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:textColor="@color/common_dialog_text_danger_red"
            android:text="" />

        <TextView
            android:id="@+id/pay_dialog_txt_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pay_dialog_txt_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="@string/dialog_txt_info_fail"
            android:textColor="@color/colorXingYeBank"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/pay_dialog_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@+id/pay_dialog_txt_title"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:src="@drawable/pay_fail" />

        <TextView
            android:id="@+id/pay_dialog_fail_return_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:text="20S"
            android:textColor="@color/colorDemoLogo"
            android:textSize="32sp"
            />

    </RelativeLayout>




</RelativeLayout>