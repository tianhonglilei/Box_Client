<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyFontNotPadding">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="style_txt_more_nav">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:textColor">@color/colorMoreTxtFtwo</item>
    </style>

    <style name="style_txt_pay_goods_details">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorMoreTxtTwoOne</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
