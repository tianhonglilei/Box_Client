<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyFontNotPadding">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="style_txt_more_nav">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:textColor">@color/colorMoreTxtFtwo</item>
    </style>

    <style name="style_txt_pay_goods_details">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorGoodsDetailsSix</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="manager_nav_rdo_btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorWhiteTxt</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:drawablePadding">13dp</item>
        <item name="android:background">@drawable/manager_nav_rdo_btn_selector</item>
    </style>

    <style name="nav_robot_check_style">
        <item name="android:layout_width">135dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/manager_nav_temp_robot_selector</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorGaryFiveTwo</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="nav_rdo_temp_set_style">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/colorGaryFiveTwo</item>
        <item name="android:textSize">25sp</item>
        <item name="android:background">@drawable/manager_nav_temp_set_selector</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
